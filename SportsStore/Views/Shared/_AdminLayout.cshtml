<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" asp-href-include="/lib/bootstrap/dist/**/*.min.css" />
    <style>
        .input-validation-error { border-color: red; background-color: #fee; }
    </style>
</head>
<body>
    <div class="m-1 p-1">
        <div class="bg-info p-2 row">
            <div class="col">
                <h4>@ViewBag.Title</h4>
            </div>
            <div class="col-1">
                <a class="btn btn-sm btn-primary" asp-action="Logout" asp-controller="Account">Logout</a>
            </div>
        </div>
        @if (TempData["message"] != null)
        {
            <div class="alert alert-success">@TempData["message"]</div>
        }
        @RenderBody()
    </div>
</body>
</html>